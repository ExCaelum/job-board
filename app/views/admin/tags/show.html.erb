<% if current_user.admin? %>
  <div class="container-fluid well">
    <div class="jumbotron text-center">
      <h1><%= @tag.name.capitalize %>'s Skills</h1>
      <div class="row">
        <div class="col-md-4 col-md-offset-2">
          <h3><%= link_to "Edit Tag", edit_admin_tag_path(@tag), class: "btn btn-warning" %></h3>
        </div>
        <div class="col-md-4">
          <h3><%= link_to "Delete", admin_tag_path(@tag), class: "btn btn-danger btn-sm", method: :delete  %></h3>
        </div>
      </div>
    </div>
    <div class="row">
      <% @skills.each do |skill| %>
        <div class="col-md-4 text-center">
            <h3><%= link_to skill.name, admin_skill_path(skill), class: "text-muted" %></h3>
            <p>
              <%= skill.description %>
            </p>
          </div>
      <% end %>
    </div>
  </div>
<% else %>
  <%= render partial: 'error' %>
<% end %>

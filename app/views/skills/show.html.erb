<% if @user == current_user && @user == @skill.user %>
  <div class="container-fluid">
    <div class="jumbotron">
      <div class="row">
        <div class="text-center col-md-2">
          <h3><%= link_to @skill.user.username, @skill.user, class: "text-muted" %></h3>
        </div>
        <div class="text-center col-md-8">
          <h1> <%= @skill.name %> </h1><br>
        </div>
        <div class="text-center col-md-2">
          <h3><%= link_to "Edit Skill", edit_user_skill_path(current_user, @skill), class: "btn btn-warning" %></h3>
        </div>
      </div>
      <div class="row text-center">
        <p>
          <%= @skill.description %>
        </p>
        <body>
          <% @skill.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag), class: "text-muted" %>,
          <% end %>
        </body>
      </div><br><br>
      <div class="row text-center">
        <%= link_to "Delete", user_skill_path(current_user, @skill), class: "btn btn-danger btn-sm", method: :delete  %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container-fluid">
    <div class="jumbotron">
      <div class="row">
        <div class="text-center col-md-2">
          <h3><%= link_to @skill.user.username, @skill.user, class: "text-muted" %></h3>
        </div>
        <div class="text-center col-md-8">
          <h1> <%= @skill.name %> </h1><br>
        </div>
      </div>
      <div class="row text-center">
        <p>
          <%= @skill.description %>
        </p>
        <body>
          <% @skill.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag), class: "text-muted" %>,
          <% end %>
        </body>
      </div>
    </div>
  </div>
<% end %>

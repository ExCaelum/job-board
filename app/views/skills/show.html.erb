<div class="container-fluid">
  <div class="jumbotron">
    <div class="row">
      <div class="">
        <h3><%= link_to @skill.user.username, @skill.user, class: "text-muted" %></h3>
      </div>
      <div class="text-center">
        <h1> <%= @skill.name %> </h1><br>
      </div>
    </div>
    <div class="row text-center">
      <p>
        <%= @skill.description %>
      </p>
      <body>
        <% @skill.tags.each do |tag| %>
          <%= link_to tag.name, tag_path(tag), class: "text-muted" %>,
        <% end %>
      </body>
    </div>
  </div>
</div>
